{% extends 'base.html.twig' %}

{% block title %}Professeur{% endblock %}

{% block body %}
    <h1>Professeur</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>NumRue</th>
                <th>Rue</th>
                <th>Copos</th>
                <th>Ville</th>
                <th>Tel</th>
                <th>Mail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for professeur in professeurs %}
            <tr>
                <td>{{ professeur.nom }}</td>
                <td>{{ professeur.prenom }}</td>
                <td>{{ professeur.numRue }}</td>
                <td>{{ professeur.rue }}</td>
                <td>{{ professeur.copos }}</td>
                <td>{{ professeur.ville }}</td>
                <td>{{ professeur.tel }}</td>
                <td>{{ professeur.mail }}</td>
                <td>
                    <a href="{{ path('app_professeur_show', {'id': professeur.id}) }}">Consulter</a>

                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_professeur_edit', {'id': professeur.id}) }}">Modifier</a>                
                    {% else %}
                    {% endif %}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_professeur_new') }}">Create new</a>
{% endblock %}
