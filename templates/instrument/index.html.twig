{% extends 'base.html.twig' %}

{% block title %}eMusic : Instruments{% endblock %}

{% block body %}
    <h1>Liste des instruments disponibles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Instruments</th>
                <th>Numéro de série</th>
                <th>Date d'achat</th>
                <th>Prix d'achat</th>
                <th>Utilisation</th>
                <th>Marque</th>
                <th>Couleur</th>
                <th>Prêt</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for instrument in instruments %}
            <tr>
                <td>{{ instrument.typeInstrument.libelle }}</td>
                <td>{{ instrument.numSerie }}</td>
                <td>{{ instrument.dateAchat ? instrument.dateAchat|date('d/m/Y') : '' }} </td>
                <td>{{ instrument.prixAchat }} €</td>
                <td>{{ instrument.utilisation }}</td>
                <td>{{ instrument.Marque.libelle }}</td>
                <td>{{ instrument.Couleur.Nom }}</td>
                <td><a href="{{ path('app_contrat_pret_show', {'id': instrument.id}) }}"/>Contrat</td>
                <td>
                    <a href="{{ path('app_instrument_show', {'id': instrument.id}) }}">Consulter</a>
                    
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_instrument_edit', {'id': instrument.id}) }}">Modifier</a>                    
                    {% else %}
                    {% endif %}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button class="btn">
    <a href="{{ path('app_instrument_new') }}">Créer nouveau</a>
    </button>
{% endblock %}
