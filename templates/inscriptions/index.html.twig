{% extends 'base.html.twig' %}

{% block title %}Inscriptions index{% endblock %}

{% block body %}
    <h1>Inscriptions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre_paiments</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for inscription in inscriptions %}
            <tr>
                <td>{{ inscription.id }}</td>
                <td>{{ inscription.nombrePaiments }}</td>
                <td>
                    <a href="{{ path('app_inscriptions_show', {'id': inscription.id}) }}">show</a>
                    <a href="{{ path('app_inscriptions_edit', {'id': inscription.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_inscriptions_new') }}">Create new</a>
{% endblock %}
